@using Mvc_Project.Models
@model List<TblSkill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Yeteneklerim</h2>
<div class="col-lg-3"></div>
<div class="col-lg-6">
    <a class="btn btn-success" style="margin-bottom:15px;" href="/Skill/AddSkill/">Yeni Yetenek Ekle</a>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Değer</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SkillID</td>
                <td>@item.SkillTitle</td>
                <td>@item.SkillValue</td>
                <td><a href="/Skill/DeleteSkill/@item.SkillID/" class="btn btn-danger">Sil</a>
                <a href="/Skill/EditSkill/@item.SkillID/" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
</div>
<div class="col-lg-3"></div>

