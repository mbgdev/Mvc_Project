@using Mvc_Project.Models
@model List<TblTestimonial>

<section class="w3l-testimonials" id="testimonials">
    <div class="customers-6-content py-5">
        <div class="container py-lg-3">
            <div class="heading text-center mx-auto">
                <h3 class="head">Referanslar</h3>
                <p class="my-3 head ">
                    Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae;
                    Nulla mollis dapibus nunc, ut rhoncus
                    turpis sodales quis. Integer sit amet mattis quam.
                </p>
            </div>

            <div id="customerhnyCarousel" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    <li data-target="#customerhnyCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#customerhnyCarousel" data-slide-to="1"></li>
                    <li data-target="#customerhnyCarousel" data-slide-to="2"></li>

                </ol>
                <!-- Carousel items -->
                <div class="carousel-inner pb-5">

                    <div class="carousel-item active">
                        <div class="customer row py-5 mt-3">
                            @foreach (var item in Model)
                            {
                                if (item.TestimonialID < 4)
                                {
                                    <div class="col-lg-4 col-md-6">
                                        <div class="card">

                                            <div class="card-body">
                                                <img class="card-img-top img-responsive" src="@item.TestimonialImage" alt="">
                                                <h3 class="card-title mt-2">@item.TestimonialName</h3>
                                                <p class="sub-title mb-3">@item.TestimonialTitle</p>
                                                <p class="card-text">
                                                    @item.TestimonialDescription
                                                </p>


                                            </div>
                                        </div>
                                    </div>
                                }

                            }


                        </div>
                    </div>
                    <!--.item-->

                    <div class="carousel-item">
                        <div class="customer row py-5 mt-3">
                            @foreach (var item in Model)
                            {
                                if (item.TestimonialID > 3)
                                {
                                    <div class="col-lg-4 col-md-6">
                                        <div class="card">

                                            <div class="card-body">
                                                <img class="card-img-top img-responsive" src="@item.TestimonialImage" alt="">
                                                <h3 class="card-title mt-2">@item.TestimonialName</h3>
                                                <p class="sub-title mb-3">@item.TestimonialTitle</p>
                                                <p class="card-text">
                                                    @item.TestimonialDescription
                                                </p>


                                            </div>
                                        </div>
                                    </div>
                                }

                            }

                        </div>

                    </div>


                    <div class="carousel-item">
                        <div class="customer row py-5 mt-3">
                            @foreach (var item in Model)
                            {
                                if (item.TestimonialID > 3)
                                {
                                    <div class="col-lg-4 col-md-6">
                                        <div class="card">

                                            <div class="card-body">
                                                <img class="card-img-top img-responsive" src="@item.TestimonialImage" alt="">
                                                <h3 class="card-title mt-2">@item.TestimonialName</h3>
                                                <p class="sub-title mb-3">@item.TestimonialTitle</p>
                                                <p class="card-text">
                                                    @item.TestimonialDescription
                                                </p>


                                            </div>
                                        </div>
                                    </div>
                                }

                            }

                        </div>

                    </div>


                </div>
                <!--.carousel-inner-->
            </div>
        </div>
    </div>
    <!--//customers -->
</section>
